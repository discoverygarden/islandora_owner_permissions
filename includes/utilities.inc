    ISLANDORA_MANAGE_PROPERTIES => ISLANDORA_OWNER_PERMISSIONS_MANAGE_OBJECT_PROPERTIES,
    ISLANDORA_REVERT_DATASTREAM => ISLANDORA_OWNER_PERMISSIONS_REVERT_DATASTREAMS,
    ISLANDORA_REGENERATE_DERIVATIVES => ISLANDORA_OWNER_PERMISSIONS_REGENERATE_DERIVATIVES,
  );
}
